<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-4">
        <h1>CRM Dashboard</h1>
        <table>
            <tr>
                <th>Name</th>
                <th>Mobile No</th>
                <th>Email</th>
                <th>State</th>
                <th>City</th>
                <th>Business Type</th>
                <th>Action</th>
            </tr>
            <% suggestions.forEach(suggestion=> { %>
                <tr>
                    <td>
                        <%= suggestion.name %>
                    </td>
                    <td>
                        <%= suggestion.mobileNo %>
                    </td>
                    <td>
                        <%= suggestion.email %>
                    </td>
                    <td>
                        <%= suggestion.state %>
                    </td>
                    <td>
                        <%= suggestion.city %>
                    </td>
                    <td>
                        <%= suggestion.businessType %>
                    </td>
                    <td>
                        <% if (!suggestion.sentToCE) { %>
                            <form action="/auth/crm/send/<%= suggestion._id %>" method="POST">
                                <button type="submit">Send to CE</button>
                            </form>
                            <% } else { %>
                                <span>Sent</span>
                                <% } %>
                    </td>
                </tr>
                <% }); %>
        </table>

    </div>

</body>

</html>