<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CRM Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <div class="container mt-4">
        <h1 class="text-center fw-bold mb-4">CRM Dashboard</h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Mobile No</th>
                        <th>Email</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Business Type</th>
                        <th>Find Form</th>
                        <th>Type of Products</th>
                        <th>Head</th>
                        <th>Flow</th>
                        <th>PipeSize</th>
                        <th>Phase</th>
                        <th>Frequency</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% suggestions.forEach(suggestion => { %>
                        <tr>
                            <td><%= suggestion.name %></td>
                            <td><%= suggestion.mobileNo %></td>
                            <td><%= suggestion.email %></td>
                            <td><%= suggestion.state %></td>
                            <td><%= suggestion.city %></td>
                            <td><%= suggestion.businessType %></td>
                            <td><%= suggestion.findForm %></td>
                            <td><%= suggestion.typeOfProducts %></td>
                            <td><%= suggestion.head %></td>
                            <td><%= suggestion.flow %></td>
                            <td><%= suggestion.pipeSize %></td>
                            <td><%= suggestion.phase %></td>
                            <td><%= suggestion.frequency %></td>
                            <td>
                                <% if (!suggestion.sentToCE) { %>
                                    <form action="/auth/crm/send/<%= suggestion._id %>" method="POST">
                                        <button type="submit" class="btn btn-primary btn-sm">Send to CE</button>
                                    </form>
                                <% } else { %>
                                    <span class="badge bg-success">Sent</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
