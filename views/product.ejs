<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header text-center">
                <h2>Product Details</h2>
            </div>
            <div class="card-body">
                <% if (!product) { %>
                    <p class="text-center text-danger">Product not found.</p>
                <% } else { %>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Model</th>
                                <td><%= product.model || "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Motor Rating</th>
                                <td><%= product.motor_rating || "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Stages</th>
                                <td><%= product.stages || "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Head Meters</th>
                                <td><%= product.head_meters ? product.head_meters.join(", ") : "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Discharge LPM</th>
                                <td><%= product.discharge_lpm ? product.discharge_lpm.join(", ") : "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Description</th>
                                <td><%= product.description || "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Input</th>
                                <td><img src="<%= product.input || "N/A" %>" style="width: 300px height: 300px" alt="<%= product.model || "N/A" %>"></td>
                            </tr>
                            <tr>
                                <th>Salient Features</th>
                                <td><%= product.salient_features ? product.salient_features.join(", ") : "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Applications</th>
                                <td><%= product.applications ? product.applications.join(", ") : "N/A" %></td>
                            </tr>
                            <tr>
                                <th>Material</th>
                                <td><%= product.material || "N/A" %></td>
                            </tr>
                        </tbody>
                    </table>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>
