<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Product</h2>
        
        <form action="/admin/update/<%= product._id %>" method="POST">
            <!-- Model Name -->
            <div class="mb-3">
                <label class="form-label">Model Name</label>
                <input type="text" class="form-control" name="model" value="<%= product.model %>" required>
            </div>

            <!-- Motor Rating -->
            <div class="mb-3">
                <label class="form-label">Motor Rating</label>
                <input type="text" class="form-control" name="motor_rating" value="<%= product.motor_rating || '' %>">
            </div>

            <!-- Stages -->
            <div class="mb-3">
                <label class="form-label">Stages</label>
                <input type="number" class="form-control" name="stages" value="<%= product.stages || '' %>">
            </div>

            <!-- Head Meters -->
            <div class="mb-3">
                <label class="form-label">Head Meters (comma-separated)</label>
                <input type="text" class="form-control" name="head_meters" value="<%= product.head_meters ? product.head_meters.join(', ') : '' %>">
            </div>

            <!-- Discharge LPM -->
            <div class="mb-3">
                <label class="form-label">Discharge LPM (comma-separated)</label>
                <input type="text" class="form-control" name="discharge_lpm" value="<%= product.discharge_lpm ? product.discharge_lpm.join(', ') : '' %>">
            </div>

            <!-- Input -->
            <div class="mb-3">
                <label class="form-label">Input</label>
                <input type="text" class="form-control" name="input" value="<%= product.input || '' %>">
            </div>

            <!-- Material of Construction -->
            <div class="mb-3">
                <label class="form-label">Material of Construction</label>
                <input type="text" class="form-control" name="material" value="<%= product.material || '' %>">
            </div>

            <!-- Description -->
            <div class="mb-3">
                <label class="form-label">Description</label>
                <textarea class="form-control" name="description" rows="4"><%= product.description || '' %></textarea>
            </div>

            <!-- Salient Features -->
            <div class="mb-3">
                <label class="form-label">Salient Features (comma-separated)</label>
                <input type="text" class="form-control" name="salient_features" value="<%= product.salient_features ? product.salient_features.join(', ') : '' %>">
            </div>

            <!-- Applications -->
            <div class="mb-3">
                <label class="form-label">Applications (comma-separated)</label>
                <input type="text" class="form-control" name="applications" value="<%= product.applications ? product.applications.join(', ') : '' %>">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Update Product</button>
            <a href="/admin" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
