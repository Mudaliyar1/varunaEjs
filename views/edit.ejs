<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Product</h2>

        <form action="/admin/edit/<%= product._id %>" method="POST" class="card p-4 shadow-lg">
            <div class="row">
                <!-- Model Name -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Model Name</label>
                    <input type="text" class="form-control" name="model" value="<%= product.model %>" required>
                </div>

                <!-- Motor Rating -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Motor Rating</label>
                    <input type="text" class="form-control" name="motor_rating" value="<%= product.motor_rating || '' %>">
                </div>

                <!-- Stages -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stages</label>
                    <input type="number" class="form-control" name="stages" value="<%= product.stages || '' %>">
                </div>

                <!-- Head Meters -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Head Meters (comma-separated)</label>
                    <input type="text" class="form-control" name="head_meters"
                        value="<%= product.head_meters ? product.head_meters.join(', ') : '' %>">
                </div>

                <!-- Discharge LPM -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Discharge LPM (comma-separated)</label>
                    <input type="text" class="form-control" name="discharge_lpm"
                        value="<%= product.discharge_lpm ? product.discharge_lpm.join(', ') : '' %>">
                </div>

                <!-- Input -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Input</label>
                    <input type="text" class="form-control" name="input" value="<%= product.input || '' %>">
                </div>

                <!-- Material of Construction -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Material of Construction</label>
                    <input type="text" class="form-control" name="material" value="<%= product.material || '' %>">
                </div>

                <!-- Description -->
                <div class="col-md-12 mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" name="description" rows="3"><%= product.description || '' %></textarea>
                </div>

                <!-- Salient Features -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Salient Features (comma-separated)</label>
                    <input type="text" class="form-control" name="salient_features"
                        value="<%= product.salient_features ? product.salient_features.join(', ') : '' %>">
                </div>

                <!-- Applications -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Applications (comma-separated)</label>
                    <input type="text" class="form-control" name="applications"
                        value="<%= product.applications ? product.applications.join(', ') : '' %>">
                </div>

                <!-- New Fields -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Group</label>
                    <input type="text" class="form-control" name="group" value="<%= product.group || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Hertz</label>
                    <input type="text" class="form-control" name="hertz" value="<%= product.hertz || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Suction Size</label>
                    <input type="text" class="form-control" name="suction_size" value="<%= product.suction_size || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Delivery Size</label>
                    <input type="text" class="form-control" name="delivery_size" value="<%= product.delivery_size || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Voltage</label>
                    <input type="text" class="form-control" name="voltage" value="<%= product.voltage || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Power Supply</label>
                    <input type="text" class="form-control" name="power_supply" value="<%= product.power_supply || '' %>">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Type</label>
                    <input type="text" class="form-control" name="type" value="<%= product.type || '' %>">
                </div>
            </div>

            <!-- Submit & Cancel Buttons -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Update Product</button>
                <a href="/admin" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</body>

</html>
