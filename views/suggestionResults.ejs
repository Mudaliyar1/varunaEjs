  <script>
    $(document).ready(function () {

      $("#visit").click(function () {
        $("#warning").hide();
      });


      $("#hamburger").click(function () {
        $("#hamburger-slide").show();
        $("#hamburger-slide").css({
          "height": "150vh", "width": "100vw", "left": "0px", "background-color": "white",
          "position": "absolute", "top": "-70px", "z-index": "10"
        });
      });

      $("#cross-icon").click(function () {
        // $("#hamburger").hide();
        $("#hamburger-slide").slideUp();
        // $("#hamburger-slide").css({ "display": "none" });
        // $("#hamburger").show();
      });


      $("#salient").click(function(){
        $("#salient").css({"background-color": "red", "color": "white"});
        $("#application").css({"background-color": "", "color": "black"});
        $("#material").css({"background-color": "", "color": "black"});
        $(".salientText").show();
        $(".applicationText").hide();
        $(".materialText").hide();
      })
      $("#application").click(function(){
        $("#application").css({"background-color": "red", "color": "white"});
        $("#salient").css({"background-color": "", "color": "black"});
        $("#material").css({"background-color": "", "color": "black"});
        $(".applicationText").show();
        $(".salientText").hide();
        $(".materialText").hide();
      })
      $("#material").click(function(){
        $("#material").css({"background-color": "red", "color": "white"});
        $("#application").css({"background-color": "", "color": "black"});
        $("#salient").css({"background-color": "", "color": "black"});
        $(".materialText").show();
        $(".applicationText").hide();
        $(".salientText").hide();
    })

    });
  </script>

      <style>
        .results-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .results-header {
            text-align: center;
            margin-bottom: 30px;
            position: relative;
        }

        .results-title {
            font-size: 28px;
            color: #333;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .results-subtitle {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .results-count {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 50px;
            padding: 8px 20px;
            display: inline-block;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .results-count.success {
            background-color: #d4edda;
            border-color: #c3e6cb;
            color: #155724;
        }

        .results-count.warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
            color: #856404;
        }

        .results-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 30px;
            justify-content: center;
        }

        .product-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.15);
        }

        .product-image-container {
            height: 220px;
            overflow: hidden;
            position: relative;
            background-color: #f8f9fa;
        }

        .product-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.5s;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-info {
            padding: 20px;
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .product-name {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 10px;
            color: #333;
        }

        .product-specs {
            margin-bottom: 15px;
            flex-grow: 1;
        }

        .spec-item {
            display: flex;
            margin-bottom: 5px;
            font-size: 14px;
        }

        .spec-label {
            color: #666;
            width: 100px;
            flex-shrink: 0;
        }

        .spec-value {
            color: #333;
            font-weight: 500;
        }

        .product-action {
            text-align: center;
            margin-top: auto;
        }

        .view-button {
            background-color: #dc3545;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s;
            width: 100%;
        }

        .view-button:hover {
            background-color: #c82333;
        }

        .no-results {
            text-align: center;
            padding: 40px 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            margin: 30px auto;
            max-width: 600px;
        }

        .no-results-icon {
            font-size: 48px;
            color: #dc3545;
            margin-bottom: 20px;
        }

        .no-results-title {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
        }

        .no-results-message {
            font-size: 16px;
            color: #666;
            margin-bottom: 20px;
        }

        .back-link {
            display: inline-block;
            margin-top: 10px;
            color: #dc3545;
            text-decoration: none;
            font-weight: 500;
        }

        .back-link:hover {
            text-decoration: underline;
        }

        /* Search criteria display */
        .search-criteria {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px 20px;
            margin: 20px 0;
            text-align: left;
        }

        .search-criteria h3 {
            font-size: 18px;
            margin-bottom: 10px;
            color: #333;
        }

        .search-criteria ul {
            list-style: none;
            padding: 0;
            margin: 0 0 15px 0;
        }

        .search-criteria li {
            margin-bottom: 8px;
            font-size: 14px;
            color: #555;
        }

        .search-criteria p {
            font-style: italic;
            color: #666;
            margin-top: 10px;
        }

        /* Action buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 20px;
        }

        .contact-link {
            display: inline-block;
            padding: 8px 16px;
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 4px;
            font-weight: 500;
            transition: background-color 0.3s;
        }

        .contact-link:hover {
            background-color: #c82333;
        }

        /* Approximate match indicator */
        .approximate-match {
            background-color: #fff3cd;
            border: 1px solid #ffeeba;
            color: #856404;
            padding: 10px 15px;
            border-radius: 4px;
            margin-bottom: 20px;
            font-size: 14px;
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .results-grid {
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 20px;
            }

            .product-image-container {
                height: 180px;
            }
        }

        @media (max-width: 480px) {
            .results-grid {
                grid-template-columns: 1fr;
                max-width: 320px;
                margin: 0 auto;
            }

            .product-image-container {
                height: 200px;
            }
        }
      </style>



</head>

<body id="body">

  <!-- header code is on views/includes/header.ejs file -->
  <%- include('includes/header')%>
    <!-- header code is between this comments -->

    <br><br>


    <main>
        <div class="results-container">
            <div class="results-header">
                <h1 class="results-title">Product Recommendations</h1>
                <p class="results-subtitle">Based on your requirements, we've found the following products that match your needs</p>

                <% if (message) { %>
                    <div class="results-count <%= products && products.length > 0 ? 'success' : 'warning' %>">
                        <%= message %>
                    </div>
                <% } %>
            </div>

            <% if (products && products.length > 0) { %>
                <% if (typeof exactMatch !== 'undefined' && !exactMatch) { %>
                    <div class="approximate-match">
                        <strong>Note:</strong> These products may not exactly match your requirements, but they are the closest matches available. Please review the specifications carefully or contact our support team for assistance.
                    </div>
                <% } %>
                <div class="results-grid">
                    <% products.forEach(product => { %>
                        <div class="product-card">
                            <div class="product-image-container">
                                <img class="product-image" src="<%= product.input || '/images/product-placeholder.jpg' %>" alt="<%= product.model %>">
                            </div>
                            <div class="product-info">
                                <h3 class="product-name"><%= product.model %></h3>
                                <div class="product-specs">
                                    <% if (product.type) { %>
                                        <div class="spec-item">
                                            <span class="spec-label">Type:</span>
                                            <span class="spec-value"><%= product.type %></span>
                                        </div>
                                    <% } %>

                                    <% if (product.head_meters && product.head_meters.length) { %>
                                        <div class="spec-item">
                                            <span class="spec-label">Head Range:</span>
                                            <span class="spec-value">
                                                <%= Array.isArray(product.head_meters) ?
                                                    Math.min(...product.head_meters.filter(h => !isNaN(h))) + ' - ' +
                                                    Math.max(...product.head_meters.filter(h => !isNaN(h))) + ' m' :
                                                    product.head_meters + ' m' %>
                                            </span>
                                        </div>
                                    <% } %>

                                    <% if (product.discharge_lpm && product.discharge_lpm.length) { %>
                                        <div class="spec-item">
                                            <span class="spec-label">Flow Range:</span>
                                            <span class="spec-value">
                                                <%= Array.isArray(product.discharge_lpm) ?
                                                    Math.min(...product.discharge_lpm.filter(f => !isNaN(f))) + ' - ' +
                                                    Math.max(...product.discharge_lpm.filter(f => !isNaN(f))) + ' LPM' :
                                                    product.discharge_lpm + ' LPM' %>
                                            </span>
                                        </div>
                                    <% } %>

                                    <% if (product.motor_rating) { %>
                                        <div class="spec-item">
                                            <span class="spec-label">Motor:</span>
                                            <span class="spec-value"><%= product.motor_rating %></span>
                                        </div>
                                    <% } %>

                                    <% if (product.stages) { %>
                                        <div class="spec-item">
                                            <span class="spec-label">Stages:</span>
                                            <span class="spec-value"><%= product.stages %></span>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="product-action">
                                    <a href="/product/<%= product._id %>" class="view-button">View Details</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            <% } else { %>
                <div class="no-results">
                    <div class="no-results-icon">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </div>
                    <h2 class="no-results-title">No Matching Products Found</h2>
                    <p class="no-results-message">We couldn't find any products that match your exact requirements. Please try adjusting your search criteria or contact our team for personalized assistance.</p>

                    <% if (typeof userCriteria !== 'undefined') { %>
                        <div class="search-criteria">
                            <h3>Your Search Criteria:</h3>
                            <ul>
                                <% if (userCriteria.type) { %>
                                    <li><strong>Product Type:</strong> <%= userCriteria.type %></li>
                                <% } %>
                                <% if (userCriteria.head) { %>
                                    <li><strong>Head Range:</strong> <%= userCriteria.head %> meters</li>
                                <% } %>
                                <% if (userCriteria.flow) { %>
                                    <li><strong>Flow Range:</strong> <%= userCriteria.flow %> LPM</li>
                                <% } %>
                                <% if (userCriteria.pipeSize) { %>
                                    <li><strong>Pipe Size:</strong> <%= userCriteria.pipeSize %> mm</li>
                                <% } %>
                                <% if (userCriteria.phase) { %>
                                    <li><strong>Phase:</strong> <%= userCriteria.phase %></li>
                                <% } %>
                                <% if (userCriteria.frequency) { %>
                                    <li><strong>Frequency:</strong> <%= userCriteria.frequency %></li>
                                <% } %>
                            </ul>
                            <p>Try broadening your search ranges or contact us for a custom solution.</p>
                        </div>
                    <% } %>

                    <div class="action-buttons">
                        <a href="/suggestion" class="back-link">‚Üê Modify Search</a>
                        <a href="/contact" class="contact-link">Contact Support</a>
                    </div>
                </div>
            <% } %>
        </div>
    </main>


    <!-- footer code starts from here / footer code is on views/includes/footer.ejs -->
    <%- include('includes/footer')%>
      <!-- footer code ends here -->

      <div id="back-top">
        <a href="#"><i class="fa-solid fa-chevron-up" style="font-size: 15px; color: white;"></i></a>
      </div>


</body>

