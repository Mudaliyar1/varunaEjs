  <script>
    $(document).ready(function () {
      
      $("#visit").click(function () {
        $("#warning").hide();
      });


      $("#hamburger").click(function () {
        $("#hamburger-slide").show();
        $("#hamburger-slide").css({
          "height": "150vh", "width": "100vw", "left": "0px", "background-color": "white",
          "position": "absolute", "top": "-70px", "z-index": "10"
        });
      });

      $("#cross-icon").click(function () {
        // $("#hamburger").hide();
        $("#hamburger-slide").slideUp();
        // $("#hamburger-slide").css({ "display": "none" });
        // $("#hamburger").show();
      });
      
      
      $("#salient").click(function(){
        $("#salient").css({"background-color": "red", "color": "white"});
        $("#application").css({"background-color": "", "color": "black"});
        $("#material").css({"background-color": "", "color": "black"});
        $(".salientText").show();
        $(".applicationText").hide();
        $(".materialText").hide();
      })
      $("#application").click(function(){
        $("#application").css({"background-color": "red", "color": "white"});
        $("#salient").css({"background-color": "", "color": "black"});
        $("#material").css({"background-color": "", "color": "black"});
        $(".applicationText").show();
        $(".salientText").hide();
        $(".materialText").hide();
      })
      $("#material").click(function(){
        $("#material").css({"background-color": "red", "color": "white"});
        $("#application").css({"background-color": "", "color": "black"});
        $("#salient").css({"background-color": "", "color": "black"});
        $(".materialText").show();
        $(".applicationText").hide();
        $(".salientText").hide();
    })

    });
  </script>

      <style>
          .container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    padding: 20px;
    justify-content: center; /* Center grid items */
    align-items: center;
}

.card {
    background: grey;
    padding: 15px;
    border-radius: 5px;
    text-align: center;
    width: 300px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin: 0 auto; /* Ensures centering */
}

.card img {
    width: 280px;
    height: 200px;
    object-fit: fill;
    border-radius: 5px;
}

.btnn {
    background: red;
    color: white;
    padding: 10px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    margin-top: 5px;
    border-radius: 7px;
    font-weight: bold;
    text-align: center;
    width: 100%;
    max-width: 250px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        justify-content: center;
    }
    .card {
        min-width: 300px;
    }
    .card img {
        height: 250px;
    }
}

@media (max-width: 480px) {
    .container {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        justify-content: center;
    }
    .card {
        min-width: 250px;
    }
    .card img {
        height: 220px;
    }
    .btnn {
        padding: 8px;
        font-size: 14px;
    }
}


      </style>



</head>

<body id="body">

  <!-- header code is on views/includes/header.ejs file -->
  <%- include('includes/header')%>
    <!-- header code is between this comments -->

    <br><br>


    <main>

      <h4 style="text-align: center;">Available Products</h4>
      <% if (message) { %>
        <script>alert("<%= message %>");</script>
    <% } %>

    <div class="container">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="card">
                    <img src="<%= product.input %>" alt="<%= product.model %>">
                    <br>
                    <p style="font-size: 18px;"><%= product.model %></p>
                    <a href="/product/<%= product._id %>" class="btnn">View Product</a>
                </div>
            <% }) %>
        <% } else { %>
            <p style="text-align: center;">No products found according to your preference . For More details Contact to company<br><a href="suggestion">Back to suggestion Page</a></p>
        <% } %>
    </div>

    </div>
 
    </main>

    
    <!-- footer code starts from here / footer code is on views/includes/footer.ejs -->
    <%- include('includes/footer')%>
      <!-- footer code ends here -->

