        </div>

        <br><br><br>
        <h4 style="padding: 0px 10px;">Requirement Of Pumps*</h4>
        <br>

        <label for="typeOfProducts">Select Product Type:</label>
        <select id="typeOfProducts" name="Type-Of-Products" required>
            <option value="">-- Select Product Type --</option>
            <% productTypes.forEach(type=> { %>
                <option value="<%= type %>">
                    <%= type %>
                </option>
            <% }); %>
        </select>

        <label for="head">Head (meters):</label>
        <input type="text" id="head" name="Head" placeholder="Min - Max" required>

        <label for="flow">Flow (LPM):</label>
        <input type="text" id="flow" name="Flow" placeholder="Min - Max" required>

        <script>
            document.getElementById("typeOfProducts").addEventListener("change", function () {
                const selectedType = this.value;

                if (selectedType) {
                    fetch(`/get-product-details?type=${selectedType}`)
                        .then(response => response.json())
                        .then(data => {
                            if (data.error) {
                                alert(data.error);
                            } else {
                                document.getElementById("head").placeholder = `${data.head.min} - ${data.head.max}`;
                                document.getElementById("flow").placeholder = `${data.flow.min} - ${data.flow.max}`;
                            }
                        })
                        .catch(error => console.error("Error fetching product details:", error));
                }
            });
        </script>

