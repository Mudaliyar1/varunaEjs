<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Varuna Pumps</title>

  <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/utility.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

  <script>
    $(document).ready(function () {
      function getUniqueValues(attribute) {
        let values = new Set();
        $(".subContainer").each(function () {
          let value = $(this).data(attribute);
          if (value) values.add(value);
        });
        return Array.from(values);
      }

      function populateDropdown(selector, values) {
        let dropdown = $(selector);
        dropdown.empty();
        dropdown.append('<option value="">Select</option>');
        values.forEach(value => {
          dropdown.append(`<option value="${value}">${value}</option>`);
        });
      }

      function filterProducts() {
        let selectedType = $("#filterType").val();
        let selectedModel = $("#filterModel").val();

        $(".subContainer").each(function () {
          let productType = $(this).data("type");
          let productModel = $(this).data("model");

          let matchType = selectedType ? productType === selectedType : true;
          let matchModel = selectedModel ? productModel === selectedModel : true;

          $(this).toggle(matchType && matchModel);
        });
      }

      let allTypes = getUniqueValues("type");
      let allModels = getUniqueValues("model");

      populateDropdown("#filterType", allTypes);
      populateDropdown("#filterModel", allModels);

      $("#filterType").on("change", function () {
        let selectedType = $(this).val();
        let filteredModels = selectedType
          ? getUniqueValues("model").filter(model =>
              $(".subContainer[data-type='" + selectedType + "'][data-model='" + model + "']").length > 0)
          : allModels;

        populateDropdown("#filterModel", filteredModels);
        filterProducts();
      });

      $("#filterModel").on("change", function () {
        filterProducts();
      });

      $("#clearFilters").on("click", function () {
        $("#filterType, #filterModel").val("");
        populateDropdown("#filterType", allTypes);
        populateDropdown("#filterModel", allModels);
        $(".subContainer").show();
      });
    });
  </script>

  <style>
    .container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        padding: 15px;
        justify-content: center;
        place-items: center;
    }

    .subContainer {
        width: 100%;
        max-width: 350px;
        height: auto;
        padding: 15px;
        background-color: grey;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        border-radius: 4px;
    }

    img {
        border-radius: 5px;
        max-width: 100%;
        height: auto;
    }

    @media (max-width: 600px) {
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    }

    .filter-container {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 20px;
      align-items: center;
    }

    .filter-container label {
      font-weight: bold;
    }

    .filter-container select {
      padding: 8px;
      border-radius: 5px;
      border: 1px solid #ccc;
      width: 200px;
    }

    .clear-btn {
      background-color: red;
      color: white;
      padding: 8px 12px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
    }
  </style>

</head>

<body id="body">

  <%- include('includes/header') %>
  
  <br><br>

  <main>

    <div class="filter-container">
      <label for="filterType">Select Type:</label>
      <select id="filterType" class="form-select"></select>

      <label for="filterModel">Select Model:</label>
      <select id="filterModel" class="form-select"></select>

      <button id="clearFilters" class="clear-btn">Clear Filters</button>
    </div>

    <div class="container">
      <% products.forEach(product => { %>
        <div class="subContainer" data-type="<%= product.type %>" data-model="<%= product.model %>">
          <img src="<%= product.input %>" alt="<%= product.type %>" style="width: 300px; height: 300px; object-fit: fill;">
          <br>
          <p style="text-align: justify;">
            <span class="product-model"><%= product.model || "N/A" %></span> - 
            <span class="product-type"><%= product.type || "N/A" %></span>
          </p>
          <a href="/product/<%= product._id %>" style="text-decoration: none; padding: 5px; width: 130px; height: 40px; background-color: red; align-content: center; text-align: center; border-radius: 8px; color: white;">View Product</a>
        </div>
      <% }) %>
    </div>

  </main>

  <%- include('includes/footer') %>

  <div id="back-top">
    <a href="#"><i class="fa-solid fa-chevron-up" style="font-size: 15px; color: white;"></i></a>
  </div>

</body>

</html>
