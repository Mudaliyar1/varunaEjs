<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CE Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this suggestion?");
        }
    </script>
    
</head>

<body>

    <div class="container mt-4">
        <h1 class="text-center fw-bold mb-4">CE Dashboard</h1>

        <div class="d-flex justify-content-between mb-3">
            <h4>Manage Products</h4>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Mobile No</th>
                        <th>Email</th>
                        <th>State</th>
                        <th>City</th>
                        <th>Business Type</th>
                        <th>Find Form</th>
                        <th>Type of Products</th>
                        <th>Head</th>
                        <th>Flow</th>
                        <th>PipeSize</th>
                        <th>Phase</th>
                        <th>Frequency</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% suggestions.forEach(suggestion=> { %>
                        <tr>
                            <td>
                                <%= suggestion.name %>
                            </td>
                            <td>
                                <%= suggestion.mobileNo %>
                            </td>
                            <td>
                                <%= suggestion.email %>
                            </td>
                            <td>
                                <%= suggestion.state %>
                            </td>
                            <td>
                                <%= suggestion.city %>
                            </td>
                            <td>
                                <%= suggestion.businessType %>
                            </td>
                            <td>
                                <%= suggestion.findForm %>
                            </td>
                            <td>
                                <%= suggestion.typeOfProducts %>
                            </td>
                            <td>
                                <%= suggestion.head %>
                            </td>
                            <td>
                                <%= suggestion.flow %>
                            </td>
                            <td>
                                <%= suggestion.pipeSize %>
                            </td>
                            <td>
                                <%= suggestion.phase %>
                            </td>
                            <td>
                                <%= suggestion.frequency %>
                            </td>
                            <td>
                                <form action="/auth/ce/update-status/<%= suggestion._id %>" method="POST">
                                    <input type="hidden" name="completed" value="<%= !suggestion.completed %>">
                                    <button type="submit"
                                        class="btn <%= suggestion.completed ? 'btn-danger' : 'btn-success' %>">
                                        <%= suggestion.completed ? "Done" : "Not Done" %>
                                    </button>
                                </form>
                                <!-- Delete Button -->
                                <form action="/auth/ce/delete/<%= suggestion._id %>" method="POST"
                                    onsubmit="return confirmDelete()" class="mt-1">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>